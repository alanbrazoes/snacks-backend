{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@img/*": ["./public/images/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@router": ["src/routes.ts"],
      "@views/*": ["./src/views/*"]
    },
    "target": "es2016",                                  
    "module": "commonjs",                                
    "outDir": "./dist",                              
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": ["./src", "src/index.ts", "src/routes.ts"],
  "exclude": ["node_modules"]
}
