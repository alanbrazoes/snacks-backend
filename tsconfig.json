{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@router/*": ["./src/modules/*"],
      "@views/*": ["./src/views/*"],
      "@public/*": ["./public/*"],
      "@models/*": ["./src/models/*"]
    },
    "target": "es6", 
    "module": "CommonJS",                                                              
    "outDir": "./dist",       
    "moduleResolution": "Node",                       
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
  },
  "include": ["./src", "src/server.ts", "src/modules/index.routes.ts"],
  "exclude": ["node_modules"]
}
