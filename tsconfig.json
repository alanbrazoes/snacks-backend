{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@router/*": ["./src/modules/*"],
      "@models/*": ["./src/models/*"]
    },
    "target": "ES2017", 
    "module": "CommonJS",
    "lib": ["es6"],  
    "outDir": "./dist",       
    "moduleResolution": "Node",                       
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "removeComments": true,
    "allowJs": true,
    "rootDir": "./src",
    "resolveJsonModule": true,
  },
  "include": ["./src", "src/server.ts", "src/modules/index.routes.ts"],
  "exclude": ["node_modules"]
}
